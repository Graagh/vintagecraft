package at.tyron.vintagecraft.TileEntity;

import at.tyron.vintagecraft.World.EnumMaterialDeposit;
import at.tyron.vintagecraft.World.EnumOreType;
import at.tyron.vintagecraft.World.EnumRockType;
import net.minecraft.block.state.BlockState;
import net.minecraft.block.state.IBlockState;
import net.minecraft.nbt.NBTTagCompound;
import net.minecraft.network.Packet;
import net.minecraft.network.play.server.S35PacketUpdateTileEntity;

public class TEOre extends NetworkTileEntity {
	public EnumRockType rocktype;
	public EnumMaterialDeposit oretype;

	public TEOre() {
		this.shouldSendInitData = true;
	}

	@Override
	public boolean canRenderBreaking() {
		return false;
	}

	public void setVisible() {
		worldObj.markBlockForUpdate(pos);
	}

	@Override
	public void readFromNBT(NBTTagCompound nbt) {
		super.readFromNBT(nbt);
		
		rocktype = EnumRockType.byId(nbt.getInteger("rocktype"));
		oretype = EnumMaterialDeposit.byId(nbt.getInteger("oretype"));
	}

	@Override
	public void writeToNBT(NBTTagCompound nbt)  {
		super.writeToNBT(nbt);
		
		nbt.setInteger("rocktype", rocktype.id);
		nbt.setInteger("oretype", oretype.id);
	}

	/*@Override
	public Packet getDescriptionPacket() {
		if((extraData & 8) != 0 || pos.getY() > 100)
		{
			NBTTagCompound nbt = new NBTTagCompound();
			createInitNBT(nbt);
			return new S35PacketUpdateTileEntity(pos, 1, nbt);
		}
		return null;
	}*/

	@Override
	public void handleInitPacket(NBTTagCompound nbt) {
		rocktype = EnumRockType.byId(nbt.getInteger("rocktype"));
		oretype = EnumMaterialDeposit.byId(nbt.getInteger("oretype"));
	}

	@Override
	public void handleDataPacket(NBTTagCompound nbt)
	{

	}

	@Override
	public void createDataNBT(NBTTagCompound nbt)
	{

	}

	@Override
	public void createInitNBT(NBTTagCompound nbt)
	{
		nbt.setInteger("id", baseBlockID);
		nbt.setInteger("meta", baseBlockMeta);
		nbt.setByte("extraData", extraData);
	}
}